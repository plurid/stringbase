{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "ES6",
        "lib": ["ES6", "DOM", "DOM.Iterable", "ES2016", "ES2017"],
        "jsx": "react",

        "outDir": "build",
        "typeRoots": [
            "node_modules/@types",
        ],


        "baseUrl": ".",
        "paths": {
            "#cli/*": [
                "./source/cli/*"
            ],
            "#commands/*": [
                "./source/commands/*"
            ],
            "#data/*": [
                "./source/data/*"
            ],
            "#objects/*": [
                "./source/objects/*"
            ],
            "#services/*": [
                "./source/services/*"
            ],

            "#client/*": [
                "./source/objects/Dashboard/client/*"
            ],
            "#server/*": [
                "./source/objects/Dashboard/server/*"
            ],
            "#kernel-assets/*": [
                "./source/objects/Dashboard/shared/kernel/assets/*"
            ],
            "#kernel-components/*": [
                "./source/objects/Dashboard/shared/kernel/components/*"
            ],
            "#kernel-containers/*": [
                "./source/objects/Dashboard/shared/kernel/containers/*"
            ],
            "#kernel-planes/*": [
                "./source/objects/Dashboard/shared/kernel/planes/*"
            ],
            "#kernel-data/*": [
                "./source/objects/Dashboard/shared/kernel/data/*"
            ],
            "#kernel-services/*": [
                "./source/objects/Dashboard/shared/kernel/services/*"
            ],
            "#routes/*": [
                "./source/objects/Dashboard/shared/routes/*"
            ],
            "#shell/*": [
                "./source/objects/Dashboard/shared/shell/*"
            ]
        },


        "declaration": true,
        "declarationDir": "distribution",
        "sourceMap": true,
        "allowJs": false,
        "esModuleInterop": true,
        "downlevelIteration": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "suppressImplicitAnyIndexErrors": true,
        "resolveJsonModule": true,

        "strict": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "source"
    ],
    "exclude": [
        "node_modules",
        "build",
        "unsource"
    ]
}
